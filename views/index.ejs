<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Application</title>
    <link rel="stylesheet" href="/stylesheets/index.css">
</head>
<body>
    <form action="/create" method="POST" class="create-form">
        <h2>Create Post</h2>
        <label for="author">Author:</label>
        <input type="text" name="author" required class="input-field" />
        <label for="title">Title:</label>
        <input type="text" name="title" required class="input-field" />
        <label for="content">Content:</label>
        <textarea name="content" required class="input-field content-input"></textarea>
        <button type="submit" class="submit-btn">Post</button>
    </form>
    <div class="posts-container">
        <% if (locals.posts && locals.posts.length > 0) { %>
            <% posts.forEach(function(post) { %>
                <div class="post">
                    <h2 class="post-title"><%= post.title %></h2>
                    <p class="post-content"><%= post.content %></p>
                    <p class="post-author">By: <%= post.author %></p>
                    <p class="post-timestamp"><%= post.timestamp %></p>
                    <a href="/edit?id=<%= post.id %>" class="edit-btn">Edit</a>
                    <a href="/delete?id=<%= post.id %>" class="delete-btn">Delete</a>
                </div>
            <% }); %>
        <% } else { %>
            <p class="no-posts">No posts available.</p>
        <% } %>
    </div>
</body>
</html>